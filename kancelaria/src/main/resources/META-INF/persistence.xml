<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                      http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="jpa" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<non-jta-data-source>jpa</non-jta-data-source>
		<properties>
			<!-- <property name="eclipselink.jdbc.platform"
				value="org.eclipse.persistence.platform.database.MySQLPlatform" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/wordpress?useUnicode=yes&amp;characterEncoding=UTF-8" />
			<property name="javax.persistence.jdbc.user" value="x" />
			<property name="javax.persistence.jdbc.password" value="x" /> -->
			<!-- podczas testowania logging level na FINE / INFO -->
			<property name="eclipselink.logging.level" value="SEVERE" />
			<property name="eclipselink.ddl-generation" value="create-or-extend-tables" /> <!-- create-tables -->
			<property name="eclipselink.ddl-generation.output-mode"
				value="database" />
		</properties>
	</persistence-unit>
</persistence>
