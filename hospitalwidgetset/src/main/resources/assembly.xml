<assembly
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>build-my-widgetset-jar</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${basedir}/target/classes
			</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/webapp/VAADIN/widgetsets</directory>
			<outputDirectory>/VAADIN/widgetsets</outputDirectory>
			<excludes>
				<exclude>WEB-INF/</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/webapp/VAADIN/themes</directory>
			<outputDirectory>/VAADIN/themes</outputDirectory>
			<excludes>
				<exclude>WEB-INF/</exclude>
			</excludes>
		</fileSet>
	</fileSets>
</assembly>